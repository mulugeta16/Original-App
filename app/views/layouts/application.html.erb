<!DOCTYPE html>
<html>
  <head>
    <title>Sunrise Sports</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.1/css/mdb.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.0.10/font-awesome-animation.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="shortcut icon" href="https://mdbootstrap.com/wp-content/themes/mdbootstrap4/favicon.ico">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--Main Navigation-->
    <header>

      <nav class="navbar navbar-expand-lg navbar-dark primary-color-dark">
        <a class="navbar-brand" href="#"><strong class="text-danger font-weight-bold">Sunrise Sports</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Home", root_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              
              <%= link_to "News", blogs_path, class:"nav-link", style:"color:yellow" %>
            </li>
            <li class="nav-item">
              <a class="nav-link" style="color:yellow" href="#">Sports</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" style="color:yellow" href="#">About us</a>
            </li>
          </ul>
          <ul class="navbar-nav nav-flex-icons">
            <% if current_user %>
              <li class="nav-item">
                <%= link_to "Admin", rails_admin_path, class:"nav-link test-white font-weight-bold", style:"color:yellow; background: gray; opacity:0.3" %>
              </li>
              <li class="nav-item">
                <%= link_to "Blogs", blogs_path, class:"nav-link", style:"color:yellow" %>
              </li>    
              <li class="nav-item">
                <%= link_to 'Edit Profile', edit_user_registration_path, class:"nav-link", style:"color:yellow" %>
              </li>  
              <li class="nav-item">
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"nav-link btn btn-sm btn-rounded btn-outline-danger", style:"color:red; background-color:gray" %>
              </li>  
            <% else %>
            <li class="nav-item">
              <%= link_to "Sign In", new_user_session_path, class:"nav-link", style:"color:yellow" %></li>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class:"nav-link", style:"color:yellow" %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>

    </header>
    <p id="notice"><%= notice %></p>
    <!--Main Navigation-->
    <%= yield %>
    
    <!--Footer-->
    <footer class="page-footer bg-dark center-on-small-only">

      <!--Footer Links-->
      <div class="container">
        <div class="row">
          <!--First column-->
          <h5 class="title text-danger">Sunshine Sports &nbsp; </h5>&copy; 2021 MULUGETA Wale </a>
          <!--/.Second column-->
        </div>
      </div>
      <!--/.Footer Links-->


    </footer>
    <!--/.Footer-->

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.1/js/mdb.min.js"></script>

    <script>
      wow = new WOW().init();
    </script>
  </body>
</html>
